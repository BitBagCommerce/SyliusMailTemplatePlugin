<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service
                id="bitbag_sylius_mail_template_plugin.provider.email_codes"
                class="BitBag\SyliusMailTemplatePlugin\Provider\EmailCodesProvider"
        >
            <argument>%sylius.mailer.emails%</argument>
        </service>

        <service
            id="bitbag_sylius_mail_template_plugin.provider.email"
            class="BitBag\SyliusMailTemplatePlugin\Provider\EmailProvider"
            decorates="sylius.email_provider"
        >
            <argument type="service" id="bitbag_sylius_mail_template_plugin.provider.email.inner" />
            <argument type="service" id="bitbag_sylius_mail_template_plugin.repository.email_template" />
        </service>
    </services>
</container>
