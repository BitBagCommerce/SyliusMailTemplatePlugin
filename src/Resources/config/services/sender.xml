<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />
        <service id="bitbag.email_sender" class="BitBag\SyliusMailTemplatePlugin\EmailSender\Sender"
                 decorates="sylius.email_sender">
            <argument type="service" id=".inner" />
            <argument type="service" id="bitbag_sylius_mail_template_plugin.resolver.template_resource_resolver" />
        </service>
    </services>
</container>
