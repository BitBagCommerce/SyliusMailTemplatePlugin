{% block subject %}
    {{ template.subject }}
{% endblock %}

{% block body %}
    {% block content %}
        {% if template.translatable.styleCss %}
            <style>{{ template.translatable.styleCss|raw }}</style>
        {% endif %}
        <h1 class="name">{{ template.name }}</h1>
        <h3 class="subject">{{ template.subject }}</h3>
        {% sandbox %}
            {% include '@BitBagSyliusMailTemplatePlugin/Admin/Email/_templateContent.html.twig' %}
        {% endsandbox %}
    {% endblock %}
{% endblock %}
