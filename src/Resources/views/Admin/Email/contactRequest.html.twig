{% block subject %}
    {{ template.subject }}
{% endblock %}

{% block body %}
    {% block content %}
        {% if template.translatable.styleCss %}
            {{ template.translatable.styleCss|raw }}
        {% endif %}
        <h1 class="name">{{ template.name }}</h1>
        <h3 class="subject">{{ template.subject }}</h3>
        {{ template.content|raw }}

        {# Fields from Sylius #}
        {{ data.email }}
        {{ data.message|nl2br }}
    {% endblock %}
{% endblock %}
